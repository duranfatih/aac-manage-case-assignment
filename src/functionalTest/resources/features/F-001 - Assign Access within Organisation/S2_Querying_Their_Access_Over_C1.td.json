{
  "_guid_": "S2_Querying_Their_Access_Over_C1",
  "title": "S2 Querying Their Access Over C1",
  "productName": "CCD Data Store",
  "operationName": "Get Case-Assigned Users and Roles",
  "specs": [
    "by S2 to query his/her case roles granted over C1"
  ],
  "user": {
    "username": "master.solicitor.2@gmail.com",
    "password": "[[$CCD_BEFTA_MASTER_SOLICITOR_2_PWD]]"
  },
  "method": "GET",
  "uri": "{{DATA_STORE_HOST}}/case-users",
  "request": {
    "_extends_": "Common_Request",
    "queryParams": {
      "case_ids": "${[scenarioContext][siblingContexts][Prerequisite_Case_Creation_C1][testData][actualResponse][body][id]}",
      "user_ids": "${[scenarioContext][testData][users][invokingUser][id]}"
    }
  },
  "expectedResponse": {
    "_extends_": "Common_200_Response",
    "body": {
      "case_users": [
        {
          "case_id": "${[scenarioContext][siblingContexts][Prerequisite_Case_Creation_C1][testData][actualResponse][body][id]}",
          "user_id": "${[scenarioContext][testData][users][invokingUser][id]}",
          "case_role": "[Defendant]"
        }
      ]
    }
  }
}
