{
  "_guid_": "S-208.3",
  "_extends_": "S-208_Test_Data_Base",

  "title": "Must return error if the ChangeOrganisationRequest.CaseRole is missing",

  "specs": [
    "system_user - with caseworker-caa IdAM role",
    "intends to set up the OrganisationToRemove in the ChangeOrganisationRequest on behalf of the user",
    "contains a case record for which the ChangeOrganisationRequest.CaseRole is missing",
    "is made by the system_user - with caseworker-caa IdAM role"
  ],

  "request": {
    "body": {
      "event_id": "[[ANYTHING_PRESENT]]",
      "case_details_before": "[[ANYTHING_PRESENT]]",
      "case_details": {
        "id": "[[ANYTHING_PRESENT]]",
        "jurisdiction": "BEFTA_MASTER",
        "state": "open",
        "case_type_id": "FT_MasterCaseType",
        "data": {
          "changeOrganisationRequestField": {
            "RequestTimestamp" : "[[ANY_TIMESTAMP_NOT_NULLABLE]]",
            "OrganisationToAdd": {
              "OrganisationID": "PUBLIC",
              "OrganisationName": "PUBLIC"
            },
            "OrganisationToRemove": {
              "OrganisationID": null,
              "OrganisationName": null
            },
            "ApprovalStatus": "0"
          }
        }
      }
    }
  },

  "expectedResponse": {
    "_extends_": "ACA_400_Response",
    "body": {
      "status" : "BAD_REQUEST",
      "message": "ChangeOrganisationRequest field could not be found or appears invalid",
      "errors" : [ ]
    }
  }
}
