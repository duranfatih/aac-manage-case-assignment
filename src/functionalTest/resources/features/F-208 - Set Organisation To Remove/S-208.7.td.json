{
  "_guid_": "S-208.7",
  "_extends_": "S-208_Test_Data_Base",

  "title": "Must return an error for a malformed Case ID",

  "specs": [
    "system_user - with caseworker-caa IdAM role",
    "intends to set up the OrganisationToRemove in the ChangeOrganisationRequest on behalf of the user",
    "contains a malformed 16 digit case ID number",
    "is made by the system_user - with caseworker-caa IdAM role"
  ],

  "request": {
    "body": {
      "event_id": "[[ANYTHING_PRESENT]]",
      "case_details_before": "[[ANYTHING_PRESENT]]",
      "case_details": {
        "id": "Non-Luhn-Number-",
        "jurisdiction": "BEFTA_MASTER",
        "state": "open",
        "case_type_id": "FT_MasterCaseType",
        "data": {
          "changeOrganisationRequestField": {
            "CaseRoleId": "[ApplicantSolicitor]",
            "RequestTimestamp" : "[[ANY_TIMESTAMP_NOT_NULLABLE]]",
            "OrganisationToAdd": {
              "OrganisationID": "PUBLIC",
              "OrganisationName": "PUBLIC"
            },
            "OrganisationToRemove": {
              "OrganisationID": null,
              "OrganisationName": null
            },
            "ApprovalStatus": "0"
          },
          "applicantOrganisationPolicy": {
            "OrgPolicyReference": "ApplicantPolicy",
            "OrgPolicyCaseAssignedRole": "[ApplicantSolicitor]",
            "Organisation": {
              "OrganisationID": "Org1",
              "OrganisationName": "Organisation 1"
            }
          },
          "respondentOrganisationPolicy": {
            "OrgPolicyReference": "RespondentPolicy",
            "OrgPolicyCaseAssignedRole": "[RespondentSolicitor]",
            "Organisation": {
              "OrganisationID": "Org2",
              "OrganisationName": "Organisation 2"
            }
          }
        }
      }
    }
  },

  "expectedResponse": {
    "_extends_": "ACA_400_Response",
    "body": {
      "status" : "BAD_REQUEST",
      "errors": [ "Case ID has to be a valid 16-digit Luhn number" ]
    }
  }
}
